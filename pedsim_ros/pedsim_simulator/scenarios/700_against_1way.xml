  <!--AgentClusters-->
  <!-- x,y: spawn position
         n: number of pedestrians
     dx,dy: 
      type: 0-1 regular people / 2 robot / 3 elderly -->
     
  <source x="29" y="5" n="1" dx="1.5" dy="4" type="1">
    <addwaypoint id="ped_kill"/>
  </source>

