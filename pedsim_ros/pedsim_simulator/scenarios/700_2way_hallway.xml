<?xml version="1.0" encoding="UTF-8"?>
<scenario>
  <!--Obstacles-->
  <obstacle x1="-0.5" y1="-0.5" x2="29.5" y2="-0.5"/>
  <obstacle x1="-0.5" y1="-0.5" x2="-0.5" y2="10.5"/>
  <obstacle x1="-0.5" y1="10.5" x2="29.5" y2="10.5"/>
  <obstacle x1="29.5" y1="-0.5" x2="29.5" y2="10.5"/>



  <!--Robot Waypoints-->
  <waypoint id="robot_start" x="5" y="5" r="1" b="3"/>
  <waypoint id="robot_goal" x="25" y="5" r="1" b="4"/>

  <!--Robot-->
  <agent x="5" y="5" n="1" dx="0" dy="0" type="2">
      <addwaypoint id="robot_start"/>
      <addwaypoint id="robot_goal"/>
  </agent>



  <!-- Kill Zone -->
  <waypoint id="ped_kill_A" x="29.5" y="3.5" r="2" b="2"/>
  <waypoint id="ped_kill_B" x="1.5" y="6.5" r="2" b="2"/>
  

  <!--AgentClusters-->
  <!-- x,y: spawn position
         n: number of pedestrians
     dx,dy: 
      type: 0-1 regular people / 2 robot / 3 elderly -->

  <source x="29" y="6.5" n="1" dx="2" dy="2" type="1">
    <addwaypoint id="ped_kill_B"/>
  </source>

  <source x="2" y="3.5" n="1" dx="2" dy="2" type="1">
    <addwaypoint id="ped_kill_A"/>
  </source>


</scenario>
